<chummer>
  <martialarts>
    <martialart>
      <bonus>
        <addskillspecializationoption xpathfilter="skill = 'Blades' or skill = 'Clubs' or skill = 'Unarmed Combat'">
          <skill>Close Combat</skill>
        </addskillspecializationoption>
        <addskillspecializationoption xpathfilter="skill = 'Automatics' or skill = 'Pistols' or skill = 'Longarms' or skill = 'Heavy Weapons' or skills/skill = 'Automatics' or skills/skill = 'Pistols' or skills/skill = 'Longarms' or skills/skill = 'Heavy Weapons'">
          <skill>Firearms</skill>
          <skills amendoperation="remove"/>
        </addskillspecializationoption>
        <addskillspecializationoption xpathfilter="skill = 'Archery' or skill = 'Throwing Weapons'">
          <skill>Projectile Weapons</skill>
        </addskillspecializationoption>
        <addskillspecializationoption xpathfilter="skill = 'Gymnastics'">
          <skill>Prowess</skill>
        </addskillspecializationoption>
      </bonus>
    </martialart>
  </martialarts>
</chummer>
